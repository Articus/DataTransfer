bootstrap: spec/bootstrap.php
formatter.name: pretty
matchers:
  - spec\Matcher\PropertyValue
  - spec\Matcher\PropertyValueType
extensions:
  FriendsOfPhpSpec\PhpSpec\CodeCoverage\CodeCoverageExtension:
    format:
      #- html
      - text
      - clover
    output:
      #html: spec_output/phpspec.coverage
      clover: spec_output/phpspec.coverage.xml
    whitelist:
      - src
    #Exclude files with PHP 8+ code
    blacklist:
      - src/Articus/DataTransfer/PhpAttribute
    blacklist_files:
      - src/Articus/DataTransfer/MetadataProvider/PhpAttribute.php
      - src/Articus/DataTransfer/MetadataProvider/Factory/PhpAttribute.php